---
all:
  children:
    minecraft:
        hosts:
            minecraft-server:
                # 自分のEIP
                ansible_host: "YOUR_ELASTIC_IP"

                ansible_connection: aws_ssm
                ansible_aws_ssm_region: ap-northeast-1
                ansible_aws_ssm_bucket_name: your-ssm-bucket
                
                # Python インタープリタのパス
                ansible_python_interpreter: /usr/bin/python3    
        vars:
          # Minecraft 固有の設定
          minecraft_version: "1.21.4"
          minecraft_memory: "4G"
          minecraft_port: 25565
          rcon_port: 25575